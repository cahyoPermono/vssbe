{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Node",
      "port": 9229,
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with tsx",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["exec", "tsx", "--inspect", "src/index.ts"],
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
